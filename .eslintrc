{
    "plugins": [
        "backbone"
    ],

    "env": {
        "browser": true,
        "node": false,
        "amd": true
    },

    "globals": {
        // Allowable unit testing globals
        "describe": false,
        "it": false,
        "assert": false,
        "before": false,
        "after": false,
        "beforeEach": false,
        "afterEach": false
    },

    "settings": {
        "backbone": {
            "View": ["View"],
            "Model": []
        }
    },

    "rules": {
        /** eslint-plugin-backbone **/
        "backbone/no-el-assign": 2,
        "backbone/no-view-model-attributes": 2,
        "backbone/no-view-collection-models": 2,
        "backbone/render-return": 2,
        //Order of backbone fields/methods:
        // __name__, tagName, className, idSuffix, id, defaults, events, constructor, initialize
        "backbone/defaults-on-top": [2, ["__name__", "tagName", "className", "idSuffix"]],
        "backbone/events-on-top": [2, ["__name__", "tagName", "className", "idSuffix", "id", "defaults"]],
        "backbone/initialize-on-top": [2, {
            "View": ["__name__", "tagName", "className", "idSuffix", "id", "defaults", "events", "constructor"],
            "Model": ["__name__", "defaults", "constructor"],
            "Collection": ["model"]
        }],
        // backbone/event-scope fires too many false positives because it confuses $.on, sinon.Mock.on, and Backbone.Model.on.
        "backbone/event-scope": 0,
        "backbone/model-defaults": 0,

        /** built-in rules **/
        "no-alert": 2,
        "no-array-constructor": 2,
        "no-bitwise": 0,
        "no-caller": 2,
        "no-catch-shadow": 2,
        "comma-dangle": 2,
        "no-cond-assign": 2,
        "no-console": 2,
        "no-constant-condition": 2,
        "no-control-regex": 2,
        "no-debugger": 2,
        "no-delete-var": 2,
        "no-div-regex": 0,
        "no-dupe-keys": 2,
        "no-else-return": 0,
        "no-empty": 2,
        "no-empty-character-class": 2,
        "no-eq-null": 0,
        "no-eval": 2,
        "no-ex-assign": 2,
        "no-extend-native": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-parens": [2, "functions"],
        "no-extra-semi": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 0,
        "no-func-assign": 2,
        "no-implied-eval": 2,
        "no-invalid-regexp": 2,
        "no-iterator": 2,
        "no-label-var": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 1,
        "no-mixed-requires": [0, false],
        "no-mixed-spaces-and-tabs": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-negated-in-lhs": 2,
        "no-nested-ternary": 0,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-object": 2,
        "no-new-wrappers": 2,
        "no-obj-calls": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-path-concat": 0,
        "no-plusplus": 0,
        "no-process-exit": 2,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-regex-spaces": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-compare": 0,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "semi-spacing": 2,
        "no-spaced-func": 2,
        "no-sparse-arrays": 2,
        "no-sync": 0,
        "no-ternary": 0,
        "no-trailing-spaces": 2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-underscore-dangle": 0,
        "no-unreachable": 2,
        "no-unused-expressions": 2,
        "no-unused-vars": [2, "local"],
        "no-use-before-define": 2,
        "no-with": 2,
        "no-multiple-empty-lines": 2,

        "block-scoped-var": 0,
        "brace-style": [2, "1tbs"],
        "camelcase": 2,
        "complexity": [0, 11],
        "consistent-return": 2,
        "consistent-this": [0, "me"],
        "curly": [2, "all"],
        "dot-notation": 2,
        "eqeqeq": 0,
        "func-names": 0,
        "func-style": [2, "expression"],
        //"global-strict": [2, "never"],
        "guard-for-in": 0,
        "key-spacing": 2,
        "max-depth": [0, 4],
        "max-len": [0, 80, 4],
        "max-nested-callbacks": [0, 2],
        "max-params": [0, 3],
        "max-statements": [0, 10],
        "new-cap": [2, {"capIsNewExceptions": ["Deferred"]}],
        "new-parens": 2,
        "one-var": 0,
        "quote-props": 0,
        "quotes": [1, "double"],
        "radix": 0,
        "semi": 2,
        "sort-vars": 0,
        "space-infix-ops": 2,
        "keyword-spacing": 2,
        "space-unary-word-ops": 0,
        "strict": 0,
        "use-isnan": 2,
        "valid-jsdoc": 0,
        "wrap-iife": [2, "any"],
        "wrap-regex": 0,
        "yoda": 2
    }
}
